
<%- include("../partials/header") %>

	<div class="container">
		<h1>Edit Campground</h1>
		<div class="newdataform">
			
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label for="exampleInputEmail1">Campground Name</label>
					<input type="text" name="campground[name]" class="form-control" id="exampleInputEmail1" value="<%=campground.name%>">
					<small id="emailHelp" class="form-text text-muted">We'll never share your information with anyone else.</small>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Image Url</label>
					<input type="text" name="campground[image]" class="form-control" id="exampleInputPassword1" value=<%=campground.image%>>
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input type="text" name="campground[description]"  class="form-control" id="description" value="<%=campground.description%>">
				</div>
				<button type="submit" class="btn btn-primary btn-block mb-2">Submit</button>
				
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>

	</div>

	<%- include("../partials/footer") %>